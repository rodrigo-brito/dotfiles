[core]
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = /home/rodrigo/.gitignore_global

[alias]
	st = status
	co = checkout
	rb = rebase
    cm = commit -m
    ru = remote update
	amend = commit --amend

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
